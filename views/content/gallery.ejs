<%          /* gallery.ejs */         %>
<%     /* Photo Gallery partial */    %>
<%   /* Written by Brandon Kelley */  %>

<section>
  <h1>Photo Gallery</h1>
  <% var keys = Object.keys(gallery) %>
  <% for (var i = 0; i < keys.length; i++) { %>
    <% var imgUrl = "/images" + gallery[keys[i]][0]["url"] %>
    <% var albumUrl = "/gallery/" + gallery[keys[i]][0]["albumUrl"] %>
    <span class="gallery_thumb" style="margin-right: 16px;">
      <a href=<%= albumUrl %>>
        <div>
          <img src=<%= imgUrl %> />
        </div>
        <h2><%= keys[i] %></h2>
      </a>
    </span>
  <% } %>
</section>
