<%        /* right_col.ejs */        %>
<%     /* Right column partial */    %>
<%  /* Written by Brandon Kelley */  %>

<% if (user !== null) { %>
  <section>
    <h4>Events</h4>
    <br/>
    <ul>
      <% if (user["events"].length === 0) { %>
        <p style="text-align: center">(You haven't joined any events yet!)</p>
      <% } else { %>
        <% for (var i = 0; i < user["events"].length; i++) { %>
          <li><a href=<%= user["events"][i]["url"] %>>
            <%= user["events"][i]["name"] %>
          </a></li>
        <% } %>
      <% } %>
    </ul>
  </section>
  <section>
    <a href="/new_event"><h4>Create a New Event</h4></a>
  </section>
  <section>
    <h4>Create a New Event</h4>
    <br/>
    <div style="width: 210px; margin: auto;">
      <span style="padding-right: 5px; padding-top: 5px;">
        <p>Event Name: </p>
        <p>Location: </p>
        <p>Date: </p>
        <p>Time: </p>
        <p>Category: </p>
        <p>Privacy: </p>
        <p>Cost: </p>
      </span>
      <span id="newEventInput" style="padding-left: 5px;">
        <input type="text" placeholder="Event Name"/>
        <input type="text" placeholder="Location"/>
        <input type="text" placeholder="Date"/>
        <input type="text" placeholder="Time"/>
        <select>
          <option>Social</option>
          <option>Professional</option>
          <option>Philanthropy</option>
        </select>
        <select>
          <option>Public</option>
          <option>Private</option>
        </select>
        <input type="text" placeholder="Cost"/>
      </span>
    </div>
    <div>
      <textarea cols="25" rows="5" placeholder="Description"></textarea>
      <button id="newEvent" type="button">Submit</button>
    </div>
  </section>
<% } %>
<section>
  <% /* The bottom line */ %>
</section>
